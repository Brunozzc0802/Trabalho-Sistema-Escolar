program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,Windows;

var opcaoDoUsuario:string;

  procedure LimparTela;
    begin
     WinExec('cmd /c cls', SW_HIDE); // limpa a tela do CMD
    end;

  //menu
procedure MenuInicial;
  var alunos,professores,materias:string;
  begin
    WriteLn('   ____________________________ ');
    WriteLn('  /        Menu Inicial        \');
    WriteLn(' /                              \');
    WriteLn('| ----- 1 Alunos           ----- |');
    WriteLn('| ----- 2 Professores      ----- |');
    WriteLn('| ----- 3 Matérias         ----- |');
    WriteLn('| ----- 4 Sair             ----- |');
    WriteLn(' \                              /');
    WriteLn('  \____________________________/');
    WriteLn('Digite a opção que você deseja acessar');
  end;

  //menu alunos
procedure MenuAlunos;

  begin
    WriteLn('   ___________________________ ');
    WriteLn('  /        Menu Alunos        \');
    WriteLn(' /                             \');
    WriteLn('| ----- 1 Add Alunos      ----- |');
    WriteLn('| ----- 2 Lista De Alunos ----- |');
    WriteLn('| ----- 3 Notas           ----- |');
    WriteLn('| ----- 4 Voltar          ----- |');
    WriteLn(' \                              /');
    WriteLn('  \____________________________/');
    WriteLn('Digite a opção que você deseja acessar');
  end;


